#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path('../lib', __dir__)

require 'raven_init'
require 'env_hash_config'
require 'your_project/worker'

context = EnvHashConfig.create
worker = YourProject::Worker.new(context)

Signal.trap('INT') do
  throw :ctrl_c
end

Signal.trap('TERM') do
  throw :ctrl_c
end

$stdout.sync = true

catch :ctrl_c do
  worker.run
end

at_exit do
  worker.shutdown
end

